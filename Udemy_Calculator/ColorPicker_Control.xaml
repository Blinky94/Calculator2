<UserControl x:Class="Udemy_Calculator.ColorPicker_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wpfx="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="35"
             d:DesignWidth="200"
             x:Name="colorPickerControl">
    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130" />
            <ColumnDefinition Width="115" />
        </Grid.ColumnDefinitions>
      
        <Label x:Name="TitleLabel"
               Uid="{Binding Path=ColorPickerUID, ElementName=colorPickerControl}"
               Content="{Binding Path=ColorPickerText, ElementName=colorPickerControl}"
               Grid.Column="0"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               FontSize="12"
               Style="{DynamicResource MainLabelStyle}" />

        <wpfx:ColorPicker x:Name="UIColorPicker"
                          Grid.Column="1"             
                          DisplayColorAndName="True"
                          SelectedColorChanged="UIColorPicker_SelectedColorChanged" />
    </Grid>
</UserControl>
