<UserControl x:Class="Udemy_Calculator.MenuSide_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Udemy_Calculator"
             mc:Ignorable="d"
             d:DesignHeight="30"
             d:DesignWidth="200">
    <Border CornerRadius="25"
            Background="Transparent">
        <Grid Background="Transparent">
            <Grid.Resources>
                <Style x:Key="BaseStyleLabel"
                       TargetType="Label">
                    <Setter Property="FontSize"
                            Value="25" />
                    <Setter Property="FontFamily"
                            Value="{StaticResource Digital}" />
                </Style>
                <Style x:Key="StyleUIMenuSelected"
                       TargetType="Label"
                       BasedOn="{StaticResource ResourceKey=BaseStyleLabel}">
                    <Setter Property="FontSize"
                            Value="15" />
                    <Setter Property="FontFamily"
                            Value="Courrier" />
                    <Setter Property="Foreground"
                            Value="White" />
                    <Setter Property="Background"
                            Value="Black" />
                </Style>
                <Style TargetType="MenuItem">
                    <Setter Property="Foreground"
                            Value="DarkBlue" />
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--Menu Sidebar-->
            <Menu x:Name="MenuSideControl"
                  Background="Transparent"
                  Foreground="White"
                  Height="25"
                  Width="25"
                  VerticalAlignment="Top"
                  Grid.RowSpan="2">
                <MenuItem>
                    <MenuItem.Header>
                        <Image Source="Images/Menu_icon.png" />
                    </MenuItem.Header>
                    <MenuItem Header="_Standard"
                              Click="MenuItem_Click">
                        <MenuItem.Icon>
                            <Image Source="Images/Standard_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Scientific"
                              Click="MenuItem_Click">
                        <MenuItem.Icon>
                            <Image Source="Images/Scientific_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Binary"
                              Click="MenuItem_Click">
                        <MenuItem.Icon>
                            <Image Source="Images/Binary_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Graphs"
                              Click="MenuItem_Click">
                        <MenuItem.Icon>
                            <Image Source="Images/Graphs_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Calendar"
                              Click="MenuItem_Click">
                        <MenuItem.Icon>
                            <Image Source="Images/Calendar_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Converter...">
                        <MenuItem.Icon>
                            <Image Source="Images/Conversion_icon.png" />
                        </MenuItem.Icon>
                        <MenuItem Header="_Area"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Area_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Electronic"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Electronic_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Energy"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Energy_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Flow"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Flow_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Force"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Force_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Length"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Length_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Power"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Power_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Pressure"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Pressure_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Speed"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Speed_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Temperature"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Temperature_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Time"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Time_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Volume"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Volume_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Weight"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Weight_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Data"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Data_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Angle"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Angle_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Currency"
                                  Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="Images/Currency_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="_Options"
                              Click="MenuItem_Click">
                        <MenuItem.Icon>
                            <Image Source="Images/Options_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>

            <!--Menu Label-->
            <Label x:Name="UIMenuSelected" Grid.Column="1"
                   Background="Transparent"
                   HorizontalContentAlignment="Center"
                   Margin="0 0 10 0"
                   Style="{StaticResource StyleUIMenuSelected}" />
        </Grid>
    </Border>

</UserControl>
