<Window x:Class="Udemy_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Udemy_Calculator"
        mc:Ignorable="d"
        Title="Calculator"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="Manual"
        x:Name="mainCalculator"
        SizeToContent="WidthAndHeight">
    <Window.Resources>
        <!--Theme.xml-->
        <XmlDataProvider Source="Params\Theme.xml"
                         XPath="/Themes"
                         x:Key="ThemeList"
                         x:Name="ThemeList"
                         IsInitialLoadEnabled="True"
                         IsAsynchronous="False" />
    </Window.Resources>
    <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel UseLayoutRounding="True">
            <Border x:Name="MainCalculator"
                    CornerRadius="25"
                    DockPanel.Dock="Top">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <!--Main Container Grid-->
                    <Border CornerRadius="25">
                        <Grid x:Name="MainGrid"
                              Margin="10 10 10 20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <!--Call the MenuSide User control-->
                            <local:MenuSide_Control Grid.Row="0"
                                                    x:Name="UIMenuSide" />

                            <!--Call the Display User control-->
                            <local:Display_Control Grid.Row="1"
                                                   x:Name="UIDisplay"
                                                   HorizontalAlignment="Center"
                                                   HorizontalContentAlignment="Stretch" />

                            <!--Call the Calculator User control-->
                            <local:Calculator_Control Grid.Row="2"
                                                      Margin="0 10 0 0"
                                                      x:Name="UICalculator" />
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </DockPanel>
    </Grid>

</Window>
