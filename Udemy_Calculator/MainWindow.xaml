<Window x:Class="Udemy_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Udemy_Calculator"
        mc:Ignorable="d"
        Title="Caluculator"
        Height="500"
        Width="350">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="FontSize"
                        Value="20" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--Calul Area-->
        <Label x:Name="resultLabel"
               Grid.Column="0"
               Grid.Row="0"
               Grid.ColumnSpan="4"
               HorizontalContentAlignment="Right"
               VerticalContentAlignment="Bottom"
               Content="0"
               FontSize="50" />
        <!--AC +/1 % /-->
        <Button Grid.Column="0"
                Grid.Row="1"
                x:Name="aCButton"
                Content="AC"
                Margin="5"
                Click="aCButton_Click" />
        <Button Grid.Column="1"
                Grid.Row="1"
                x:Name="negativeButton"
                Content="+/1"
                Margin="5"
                Click="multiPlyCoefButton_Click" />
        <Button Grid.Column="2"
                Grid.Row="1"
                x:Name="percentButton"
                Content="%"
                Margin="5"
                Click="multiPlyCoefButton_Click" />
        <Button Grid.Column="3"
                Grid.Row="1"
                x:Name="divideButton"
                Content="÷"
                Margin="5"
                Click="operatorButton_Click" />
        <!--7 8 9 *-->
        <Button Grid.Column="0"
                Grid.Row="2"
                x:Name="sevenButton"
                Content="7"
                Margin="5"
                Click="numberButton_Click" />
        <Button Grid.Column="1"
                Grid.Row="2"
                x:Name="heightButton"
                Content="8"
                Margin="5"
                Click="numberButton_Click" />
        <Button Grid.Column="2"
                Grid.Row="2"
                x:Name="nineButton"
                Content="9"
                Margin="5"
                Click="numberButton_Click" />
        <Button Grid.Column="3"
                Grid.Row="2"
                x:Name="multiplyButton"
                Content="×"
                Margin="5"
                Click="operatorButton_Click" />
        <!--4 5 6 - -->
        <Button Grid.Column="0"
                Grid.Row="3"
                x:Name="fourButton"
                Content="4"
                Margin="5"
                Click="numberButton_Click" />
        <Button Grid.Column="1"
                Grid.Row="3"
                x:Name="fiveButton"
                Content="5"
                Margin="5"
                Click="numberButton_Click" />
        <Button Grid.Column="2"
                Grid.Row="3"
                x:Name="sixButton"
                Content="6"
                Margin="5"
                Click="numberButton_Click" />
        <Button Grid.Column="3"
                Grid.Row="3"
                x:Name="minusButton"
                Content="-"
                Margin="5"
                Click="operatorButton_Click" />
        <!--1 2 3 + -->
        <Button Grid.Column="0"
                Grid.Row="4"
                x:Name="oneButton"
                Content="1"
                Margin="5"
                Click="numberButton_Click" />
        <Button Grid.Column="1"
                Grid.Row="4"
                x:Name="twoButton"
                Content="2"
                Margin="5"
                Click="numberButton_Click" />
        <Button Grid.Column="2"
                Grid.Row="4"
                x:Name="threeButton"
                Content="3"
                Margin="5"
                Click="numberButton_Click" />
        <Button Grid.Column="3"
                Grid.Row="4"
                x:Name="plusButton"
                Content="+"
                Margin="5"
                Click="operatorButton_Click" />
        <!--0 . = -->
        <Button Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="5"
                x:Name="zeroButton"
                Content="0"
                Margin="5"
                Click="numberButton_Click" />
        <Button Grid.Column="2"
                Grid.Row="5"
                x:Name="pointButton"
                Content="."
                Margin="5"
                Click="pointButton_Click" />
        <Button Grid.Column="3"
                Grid.Row="5"
                x:Name="equalButton"
                Content="="
                Margin="5"
                Click="equalButton_Click" />
    </Grid>
</Window>
