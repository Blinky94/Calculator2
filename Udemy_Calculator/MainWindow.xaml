<Window x:Class="Udemy_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Udemy_Calculator"
        mc:Ignorable="d"
        Title="Caluculator"
        Height="390"
        Width="650">
    <!--Main Container Grid-->
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="FontSize"
                        Value="20" />
            </Style>
            <Style TargetType="Label">
                <Setter Property="FontSize"
                        Value="40" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"
                              Name="UIHistoryExpanderColumn" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--Extended Function Grid-->
        <Grid Grid.Row="0"
              Grid.Column="0"
              Grid.RowSpan="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--Square-->
            <!--1/x-->
            <!--x2-->
            <!--x3-->
            <!--xy-->
            <!--|x|-->
            <!--Pi-->
            <!--exposant-->
            <!--exponential-->
            <!--(-->
            <!--)-->
            <!--n!-->
            <!--mod-->
            <!--10x-->
            <!--log-->
            <!--ln-->
            <!--sin-->
            <!--sin-1-->
            <!--cos-->
            <!--cos-1-->
            <!--tan-->
            <!--tan-1-->
            <!--hyp-->
            <!--sec-->
            <!--sec-1-->
            <!--csc-->
            <!--csc-1-->
            <!--cot-->
            <!--cot-1-->
            <!--->deg-->
            <!--->dms : Degrees, minutes, seconds-->

        </Grid>
        <!--Calcul Grid-->
        <Grid Grid.Column="1"
              Grid.Row="0"
              Grid.RowSpan="6">
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin"
                            Value="1" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--Calul Area-->
            <Viewbox HorizontalAlignment="Right"
                     Grid.Column="0"
                     Grid.Row="0"
                     Grid.ColumnSpan="4">
                <Label x:Name="UIResultLabel"
                       HorizontalContentAlignment="Right"
                       VerticalContentAlignment="Top"
                       Content="0" />
            </Viewbox>
            <!--AC +/1 % /-->
            <Button Grid.Row="1"
                    Grid.Column="0"
                    x:Name="UIACButton"
                    Content="AC"
                    Click="UIACButton_Click" />
            <Button Grid.Row="1"
                    Grid.Column="1"
                    x:Name="UINegativeButton"
                    Content="+/1"
                    Click="UIMultiplyCoefButton_Click" />
            <Button Grid.Row="1"
                    Grid.Column="2"
                    x:Name="UIPercentButton"
                    Content="%"
                    Click="UIMultiplyCoefButton_Click" />
            <Button Grid.Row="1"
                    Grid.Column="3"
                    x:Name="UIDivideButton"
                    Content="÷"
                    Click="UIOperatorButton_Click" />
            <!--7 8 9 *-->
            <Button Grid.Row="2"
                    Grid.Column="0"
                    x:Name="UISevenButton"
                    Content="7"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="2"
                    Grid.Column="1"
                    x:Name="UIHeightButton"
                    Content="8"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="2"
                    Grid.Column="2"
                    x:Name="UINineButton"
                    Content="9"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="2"
                    Grid.Column="3"
                    x:Name="UIMultiplyButton"
                    Content="×"
                    Click="UIOperatorButton_Click" />
            <!--4 5 6 - -->
            <Button Grid.Row="3"
                    Grid.Column="0"
                    x:Name="UIFourButton"
                    Content="4"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="3"
                    Grid.Column="1"
                    x:Name="UIFiveButton"
                    Content="5"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="3"
                    Grid.Column="2"
                    x:Name="UISixButton"
                    Content="6"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="3"
                    Grid.Column="3"
                    x:Name="UIMinusButton"
                    Content="-"
                    Click="UIOperatorButton_Click" />
            <!--1 2 3 + -->
            <Button Grid.Row="4"
                    Grid.Column="0"
                    x:Name="UIOneButton"
                    Content="1"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="4"
                    Grid.Column="1"
                    x:Name="UITwoButton"
                    Content="2"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="4"
                    Grid.Column="2"
                    x:Name="UIThreeButton"
                    Content="3"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="4"
                    Grid.Column="3"
                    x:Name="UIPlusButton"
                    Content="+"
                    Click="UIOperatorButton_Click" />
            <!--0 . = -->
            <Button Grid.ColumnSpan="2"
                    Grid.Row="5"
                    Grid.Column="0"
                    x:Name="UIZeroButton"
                    Content="0"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="5"
                    Grid.Column="2"
                    x:Name="UIPointButton"
                    Content="."
                    Click="UIPointButton_Click" />
            <Button Grid.Row="5"
                    Grid.Column="3"
                    x:Name="UIEqualButton"
                    Content="="
                    Click="UIEqualButton_Click" />
        </Grid>
        <!--History Grid-->
        <Expander Grid.Row="0"
                  Grid.Column="2"
                  Grid.RowSpan="6"
                  ExpandDirection="Right"
                  IsExpanded="False"
                  Header="History"
                  Background="Transparent"
                  Expanded="UIHistoryExpander_Expanded"
                  Collapsed="UIHistoryExpander_Collapsed">
            <Expander.Content>
                <Grid Name="HistoryGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <ScrollViewer x:Name="UIHistoryScrollViewer"
                                  Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto"
                                  Background="Transparent"
                                  Visibility="Visible"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch">
                        <RichTextBox x:Name="UIHistoryTextBox"
                                     IsReadOnly="True"
                                     BorderBrush="LightGray"
                                     BorderThickness="0 0 0 0"
                                     Background="Transparent"
                                     Foreground="LightGreen"
                                     FontWeight="Bold"
                                     FontSize="18"
                                     ScrollViewer.CanContentScroll="True"
                                     Padding="15"
                                     Margin="15 15 0 5"
                                     TextChanged="UIHistoryTextBox_TextChanged">
                            <FlowDocument x:Name="UIHistoryFlowDoc"
                                          LineHeight="1">
                            </FlowDocument>
                        </RichTextBox>
                    </ScrollViewer>

                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                Margin="20 0 0 0"
                                DockPanel.Dock="Bottom">
                        <Button x:Name="UICleaner"
                                Background="White"
                                Width="25"
                                Height="25"
                                Click="UICleaner_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/Cleaner_icon.png" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Expander.Content>


        </Expander>
    </Grid>
</Window>
