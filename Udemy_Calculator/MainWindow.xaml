<Window x:Class="Udemy_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Udemy_Calculator"
        mc:Ignorable="d"
        Title="Calculator"
        ResizeMode="NoResize"
        Height="410"
        Width="300">
    <Window.Resources>
        <!--UI History Expander Template-->
        <ControlTemplate x:Key="UIHistoryExpander"
                         TargetType="{x:Type Expander}">
            <DockPanel>
                <ToggleButton x:Name="ExpanderButton"
                              Background="Transparent"
                              BorderThickness="0"
                              DockPanel.Dock="Top"
                              HorizontalAlignment="Left"
                              Checked="UIHistoryExpander_Expanded"
                              Unchecked="UIHistoryExpander_Collapsed">
                    <Image Source="Images/History_icon.png"
                           Width="22"
                           Height="22" />
                </ToggleButton>
                <ContentPresenter x:Name="ExpanderContent"
                                  Grid.Column="1"
                                  Visibility="Visible"
                                  DockPanel.Dock="Bottom" />
            </DockPanel>
            <ControlTemplate.Triggers>
                <Trigger Property="IsExpanded"
                         Value="True">
                    <Setter TargetName="ExpanderContent"
                            Property="Visibility"
                            Value="Visible" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <!--Main Container Grid-->
    <Grid>
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="FontSize"
                        Value="25" />
                <Setter Property="FontFamily"
                        Value="{StaticResource Digital}" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="auto"
                              Name="UIHistoryExpanderColumn" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--Menu Header-->
        <Grid Grid.Column="0"
              Grid.Row="0"
              Width="30">

            <Menu x:Name="MenuSideButton"
                  HorizontalAlignment="Left"
                  Background="Transparent"
                  Height="25"
                  Width="25"
                  VerticalAlignment="Top"
                  BorderBrush="Transparent">
                <MenuItem>
                    <MenuItem.Header>
                        <Image Source="Images/Menu_icon.png" />
                    </MenuItem.Header>
                    <MenuItem Header="_Standard">
                        <MenuItem.Icon>
                            <Image Source="Images/Standard_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Scientific">
                        <MenuItem.Icon>
                            <Image Source="Images/Scientific_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Binary">
                        <MenuItem.Icon>
                            <Image Source="Images/Binary_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Calendar">
                        <MenuItem.Icon>
                            <Image Source="Images/Calendar_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Graph">
                        <MenuItem.Icon>
                            <Image Source="Images/Graph_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Converter...">
                        <MenuItem.Icon>
                            <Image Source="Images/Conversion_icon.png" />
                        </MenuItem.Icon>
                        <MenuItem Header="_Area">
                            <MenuItem.Icon>
                                <Image Source="Images/Area_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Electronic">
                            <MenuItem.Icon>
                                <Image Source="Images/Electronic_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Energy">
                            <MenuItem.Icon>
                                <Image Source="Images/Energy_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Flow">
                            <MenuItem.Icon>
                                <Image Source="Images/Flow_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Force">
                            <MenuItem.Icon>
                                <Image Source="Images/Force_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Length">
                            <MenuItem.Icon>
                                <Image Source="Images/Length_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Power">
                            <MenuItem.Icon>
                                <Image Source="Images/Power_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Pressure">
                            <MenuItem.Icon>
                                <Image Source="Images/Pressure_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Speed">
                            <MenuItem.Icon>
                                <Image Source="Images/Speed_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Temperature">
                            <MenuItem.Icon>
                                <Image Source="Images/Temperature_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Time">
                            <MenuItem.Icon>
                                <Image Source="Images/Time_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Volume">
                            <MenuItem.Icon>
                                <Image Source="Images/Volume_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Weight">
                            <MenuItem.Icon>
                                <Image Source="Images/Weight_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Data">
                            <MenuItem.Icon>
                                <Image Source="Images/Data_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Angle">
                            <MenuItem.Icon>
                                <Image Source="Images/Angle_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Currency">
                            <MenuItem.Icon>
                                <Image Source="Images/Currency_icon.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="_Options">
                        <MenuItem.Icon>
                            <Image Source="Images/Options_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>

        </Grid>

        <!--Calcul Grid-->
        <Grid Grid.Column="1"
              Grid.Row="0"
              Grid.RowSpan="6">
            <Grid.Resources>
                <Style x:Key="BaseStyleButton"
                       TargetType="Button">
                    <Setter Property="Margin"
                            Value="1" />
                    <Setter Property="FontSize"
                            Value="25" />
                    <Setter Property="Foreground"
                            Value="Black" />
                    <Setter Property="Background"
                            Value="LightGray" />
                    <Setter Property="FontFamily"
                            Value="{StaticResource Digital}" />
                </Style>
                <Style x:Key="NumberStyleButton"
                       TargetType="Button"
                       BasedOn="{StaticResource ResourceKey=BaseStyleButton}">
                    <Setter Property="Background"
                            Value="Gray" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--Calul Area-->
            <Viewbox HorizontalAlignment="Right"
                     Grid.Column="0"
                     Grid.Row="0"
                     Grid.ColumnSpan="4">
                <Label x:Name="UIResultLabel"
                       HorizontalContentAlignment="Right"
                       VerticalContentAlignment="Top"
                       Content="0" />
            </Viewbox>
            <!--AC +/1 % /-->
            <Button Grid.Row="1"
                    Grid.Column="0"
                    x:Name="UIACButton"
                    Style="{StaticResource BaseStyleButton}"
                    Content="AC"
                    Click="UIACButton_Click" />
            <Button Grid.Row="1"
                    Grid.Column="1"
                    x:Name="UINegativeButton"
                    Style="{StaticResource BaseStyleButton}"
                    Content="+/1"
                    Click="UIMultiplyCoefButton_Click" />
            <Button Grid.Row="1"
                    Grid.Column="2"
                    x:Name="UIPercentButton"
                    Style="{StaticResource BaseStyleButton}"
                    Content="%"
                    Click="UIMultiplyCoefButton_Click" />
            <Button Grid.Row="1"
                    Grid.Column="3"
                    x:Name="UIDivideButton"
                    Style="{StaticResource BaseStyleButton}"
                    Content="÷"
                    Click="UIOperatorButton_Click" />
            <!--7 8 9 *-->
            <Button Grid.Row="2"
                    Grid.Column="0"
                    x:Name="UISevenButton"
                    Style="{StaticResource NumberStyleButton}"
                    Content="7"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="2"
                    Grid.Column="1"
                    x:Name="UIHeightButton"
                    Style="{StaticResource NumberStyleButton}"
                    Content="8"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="2"
                    Grid.Column="2"
                    x:Name="UINineButton"
                    Style="{StaticResource NumberStyleButton}"
                    Content="9"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="2"
                    Grid.Column="3"
                    x:Name="UIMultiplyButton"
                    Style="{StaticResource BaseStyleButton}"
                    Content="×"
                    Click="UIOperatorButton_Click" />
            <!--4 5 6 - -->
            <Button Grid.Row="3"
                    Grid.Column="0"
                    x:Name="UIFourButton"
                    Style="{StaticResource NumberStyleButton}"
                    Content="4"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="3"
                    Grid.Column="1"
                    x:Name="UIFiveButton"
                    Style="{StaticResource NumberStyleButton}"
                    Content="5"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="3"
                    Grid.Column="2"
                    x:Name="UISixButton"
                    Style="{StaticResource NumberStyleButton}"
                    Content="6"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="3"
                    Grid.Column="3"
                    x:Name="UIMinusButton"
                    Style="{StaticResource BaseStyleButton}"
                    Content="-"
                    Click="UIOperatorButton_Click" />
            <!--1 2 3 + -->
            <Button Grid.Row="4"
                    Grid.Column="0"
                    x:Name="UIOneButton"
                    Style="{StaticResource NumberStyleButton}"
                    Content="1"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="4"
                    Grid.Column="1"
                    x:Name="UITwoButton"
                    Style="{StaticResource NumberStyleButton}"
                    Content="2"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="4"
                    Grid.Column="2"
                    x:Name="UIThreeButton"
                    Style="{StaticResource NumberStyleButton}"
                    Content="3"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="4"
                    Grid.Column="3"
                    x:Name="UIPlusButton"
                    Style="{StaticResource BaseStyleButton}"
                    Content="+"
                    Click="UIOperatorButton_Click" />
            <!--0 . = -->
            <Button Grid.ColumnSpan="2"
                    Grid.Row="5"
                    Grid.Column="0"
                    x:Name="UIZeroButton"
                    Style="{StaticResource NumberStyleButton}"
                    Content="0"
                    Click="UINumberButton_Click" />
            <Button Grid.Row="5"
                    Grid.Column="2"
                    x:Name="UIPointButton"
                    Style="{StaticResource BaseStyleButton}"
                    Content="."
                    Click="UIPointButton_Click" />
            <Button Grid.Row="5"
                    Grid.Column="3"
                    x:Name="UIEqualButton"
                    Style="{StaticResource BaseStyleButton}"
                    Content="="
                    Click="UIEqualButton_Click" />
        </Grid>

        <!--History Grid-->
        <Expander Grid.Row="0"
                  Grid.Column="2"
                  Grid.RowSpan="7"
                  ExpandDirection="Right"
                  IsExpanded="False"
                  Template="{StaticResource ResourceKey=UIHistoryExpander}"
                  OverridesDefaultStyle="True"
                  Background="Transparent">
            <Expander.Content>
                <Grid Name="HistoryGrid"
                      Background="Transparent">
                    <Grid.Resources>
                        <Style TargetType="RichTextBox">
                            <Setter Property="FontSize"
                                    Value="16" />
                            <Setter Property="FontWeight"
                                    Value="Bold" />
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <ScrollViewer x:Name="UIHistoryScrollViewer"
                                  Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Background="Transparent">
                        <RichTextBox x:Name="UIHistoryTextBox"
                                     IsReadOnly="True"
                                     BorderBrush="LightGray"
                                     BorderThickness="0 0 0 0"
                                     Margin="35 0 15 0"
                                     ScrollViewer.CanContentScroll="True"
                                     Padding="0"
                                     TextChanged="UIHistoryTextBox_TextChanged">
                            <FlowDocument x:Name="UIHistoryFlowDoc"
                                          LineHeight="1">
                            </FlowDocument>
                        </RichTextBox>
                    </ScrollViewer>

                    <StackPanel Orientation="Horizontal"
                                Background="Transparent"
                                Grid.Row="1"
                                HorizontalAlignment="Right"
                                Margin="0 0 15 0"
                                DockPanel.Dock="Bottom">
                        <Button x:Name="UICleaner"
                                Background="White"
                                Visibility="Hidden"
                                Width="25"
                                Height="25"
                                Click="UICleaner_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/Cleaner_icon.png" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Expander.Content>
        </Expander>
    </Grid>
</Window>
