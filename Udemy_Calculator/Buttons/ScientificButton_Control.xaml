<UserControl x:Class="Udemy_Calculator.Buttons.ScientificButton_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Udemy_Calculator.Buttons"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="scientificButtonControl">
    <StackPanel VerticalAlignment="Center">
        <Button x:Name="ScientificButtonControl"
                Style="{DynamicResource ResourceKey=ScientificButtonsStyle}"
                Uid="{Binding Path=ScientificButtonContent, ElementName=scientificButtonControl}"
                Content="{Binding Path=ScientificButtonContent, ElementName=scientificButtonControl}"
                Click="ScientificButtonControl_Click">
        </Button>
    </StackPanel>
</UserControl>
