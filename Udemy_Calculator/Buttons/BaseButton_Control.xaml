<UserControl x:Class="Udemy_Calculator.Buttons.BaseButton_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Udemy_Calculator.Buttons"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:Name="baseButtonControl">
    <StackPanel VerticalAlignment="Center">
        <Button x:Name="BaseButtonControl"
                Style="{DynamicResource ResourceKey=BaseButtonsStyle}"
                Uid="{Binding Path=BaseButtonContent, ElementName=baseButtonControl}"
                Content="{Binding Path=BaseButtonContent, ElementName=baseButtonControl}"
                Click="BaseButtonControl_Click">
        </Button>
    </StackPanel>
</UserControl>
