<UserControl x:Class="Udemy_Calculator.Buttons.NumericalButton_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Udemy_Calculator.Buttons"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:Name="numericalButtonControl">
    <StackPanel VerticalAlignment="Center">
        <Button x:Name="NumericalButtonControl"
                Style="{DynamicResource ResourceKey=NumericalsButtonsStyle}"
                Uid="{Binding Path=NumericalButtonContent, ElementName=numericalButtonControl}"
                Content="{Binding Path=NumericalButtonContent, ElementName=numericalButtonControl}"
                Click="NumericalButtonControl_Click">
        </Button>
    </StackPanel>
</UserControl>
