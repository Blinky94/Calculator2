<Window x:Class="Udemy_Calculator.OptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Calculator theme"
        ResizeMode="NoResize"
        WindowStyle="None"
        Style="{StaticResource MainWindowStyle}"
        WindowStartupLocation="Manual"
        SizeToContent="WidthAndHeight">

    <Canvas x:Name="Canvas"
            Width="325"
            Height="450">
        
        <!--Main Grid-->
        <Grid Canvas.Top="1"
              Canvas.Left="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <!--StackPanel for Theme name and selection Combobox-->
            <StackPanel Orientation="Horizontal"
                        Margin="10"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        Grid.Row="0">
                <Label x:Name="ComboBoxThemeListLabel"
                       Content="Theme name"
                       FontSize="12" />
                <ComboBox x:Name="ComboBoxThemeList"
                          HorizontalAlignment="Stretch"
                          Width="200"
                          FontSize="15"
                          Height="22"
                          FontWeight="SemiBold"
                          VerticalContentAlignment="Center"
                          Padding="10 0 0 5"
                          HorizontalContentAlignment="Center"
                          SelectionChanged="ComboBoxThemeList_SelectionChanged" />
            </StackPanel>

            <!--Grid for ListBox of elements name and Combo to select colors-->
            <Grid Grid.Row="1"
                  Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.25*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ListBox x:Name="ItemsListComboBox"
                         Grid.Column="0"
                         Height="330"
                         SelectedItem="ItemsListComboBox_Selected" />
                <StackPanel Orientation="Vertical"
                            Grid.Column="1">

                </StackPanel>
            </Grid>
            <StackPanel Orientation="Horizontal"
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="Button"
                           BasedOn="{StaticResource ResourceKey=MainThemeButtonStyle}" />
                </StackPanel.Resources>

                <Button Click="Button_Add"
                        HorizontalAlignment="Center">
                    <StackPanel>
                        <Image Source="/Images/Add_icon.png" />
                    </StackPanel>
                </Button>
                <Button Click="Button_Save">
                    <StackPanel>
                        <Image Source="/Images/Save_icon.png" />
                    </StackPanel>
                </Button>
                <Button Click="Button_Cancel">
                    <StackPanel>
                        <Image Source="/Images/Cancel_icon.png" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Canvas>

</Window>
