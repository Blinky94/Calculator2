<Window x:Class="Udemy_Calculator.OptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Udemy_Calculator"
        xmlns:wpfx="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Calculator theme"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        SizeToContent="WidthAndHeight">

    <Canvas x:Name="Canvas"
            Background="Transparent"
            Width="325"
            Height="550">
        <Grid Canvas.Top="1"
              Canvas.Left="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="460" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal"
                        Margin="5 10 0 -10"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        Grid.Row="0">
                <Label x:Name="ComboBoxThemeListLabel" Content="Theme name " />
                <ComboBox x:Name="ComboBoxThemeList"
                          HorizontalAlignment="Stretch"
                          Width="200"
                          FontSize="15"
                          Height="22"
                          FontWeight="SemiBold"
                          VerticalContentAlignment="Center"
                          Padding="10 0 0 5"
                          HorizontalContentAlignment="Center"
                          SelectionChanged="ComboBoxThemeList_SelectionChanged" />
            </StackPanel>

            <WrapPanel x:Name="UICustomThemesList"
                       Background="Transparent"
                       Grid.Row="1"
                       Orientation="Vertical"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
          
            <StackPanel Orientation="Horizontal" 
                        Background="Transparent"
                        Grid.Row="2"
                        Margin="85 5 0 0"
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center">
                <Button Click="Button_Add" 
                        HorizontalAlignment="Center">
                    <StackPanel>
                        <Image Width="20"
                               Source="/Images/Add_icon.png" />
                    </StackPanel>
                </Button>
                <Button Click="Button_Save">
                    <StackPanel>
                        <Image Width="20"
                               Source="/Images/Save_icon.png" />
                    </StackPanel>
                </Button>
                <Button Click="Button_Cancel">
                    <StackPanel>
                        <Image Width="23"
                               Source="/Images/Cancel_icon.png" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Canvas>

</Window>
