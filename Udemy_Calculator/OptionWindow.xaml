<Window x:Class="Udemy_Calculator.OptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Udemy_Calculator"
        mc:Ignorable="d"
        Title="Calculator theme"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="Manual"
        SizeToContent="WidthAndHeight"
        Style="{DynamicResource MainWindowStyle}">

    <!--Main Grid-->
    <Grid Margin="10">
        <Grid.Resources>
            <local:TestingBackgroundDarkerConverter x:Key="testingBGDarkerConverter" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--StackPanel for Theme name and selection Combobox-->
        <StackPanel Orientation="Horizontal"
                    Margin="10"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">
            <Label x:Name="ThemeListLabel"
                   Style="{DynamicResource MainLabelStyle}"
                   Content="Theme name"
                   FontSize="12" />
            <ComboBox x:Name="ThemeListComboBox"
                      HorizontalAlignment="Stretch"
                      Width="250"
                      FontSize="15"
                      Height="22"
                      FontWeight="SemiBold"
                      VerticalContentAlignment="Center"
                      Padding="10,0,0,5"
                      HorizontalContentAlignment="Center"
                      SelectionChanged="ComboBoxThemeList_SelectionChanged" />
        </StackPanel>

        <!--Grid for ListBox of elements name and Combo to select colors-->
        <ListBox x:Name="ItemsListBox"
                 Grid.Column="0"
                 Grid.Row="1"
                 Height="250"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 SelectionChanged="ItemsListBox_Selected" />
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    Grid.Column="1"
                    Grid.Row="1">
            <StackPanel.Resources>
                <Style TargetType="local:ColorPicker_Control">
                    <Setter Property="Margin"
                            Value="0,5,0,5" />
                </Style>
            </StackPanel.Resources>
            <local:ColorPicker_Control x:Name="Color1Picker"
                                       ColorPickerText="Color1" />
            <local:ColorPicker_Control x:Name="Color2Picker"
                                       ColorPickerText="Color2" />
            <local:ColorPicker_Control x:Name="Color3Picker"
                                       ColorPickerText="Color3" />
            <local:ColorPicker_Control x:Name="Color4Picker"
                                       ColorPickerText="Color4" />
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Click="Button_Add"
                    HorizontalAlignment="Center"
                    Style="{DynamicResource BaseButtonsStyle}"
                    Width="40"
                    Height="25">
                <StackPanel>
                    <Image>
                        <Image.Style>
                            <Style TargetType="Image"
                                   BasedOn="{StaticResource ImageButtonStyle}">
                                <Setter Property="Source"
                                        Value="Images/Add_icon.png" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Background, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Converter={StaticResource testingBGDarkerConverter}}"
                                                 Value="true">
                                        <Setter Property="Source"
                                                Value="Images/Add_icon_reverse.png" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </StackPanel>
            </Button>
            <Button Click="Button_Save"
                    Style="{DynamicResource BaseButtonsStyle}"
                    Width="40"
                    Height="25">
                <StackPanel>
                    <Image>
                        <Image.Style>
                            <Style TargetType="Image"
                                   BasedOn="{StaticResource ImageButtonStyle}">
                                <Setter Property="Source"
                                        Value="Images/Save_icon.png" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Background, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Converter={StaticResource testingBGDarkerConverter}}"
                                                 Value="true">
                                        <Setter Property="Source"
                                                Value="Images/Save_icon_reverse.png" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </StackPanel>
            </Button>
            <Button Click="Button_Cancel"
                    Style="{DynamicResource BaseButtonsStyle}"
                    Width="40"
                    Height="25">
                <StackPanel>
                    <Image>
                        <Image.Style>
                            <Style TargetType="Image"
                                   BasedOn="{StaticResource ImageButtonStyle}">
                                <Setter Property="Source"
                                        Value="Images/Cancel_icon.png" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Background, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Converter={StaticResource testingBGDarkerConverter}}"
                                                 Value="true">
                                        <Setter Property="Source"
                                                Value="Images/Cancel_icon_reverse.png" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>

</Window>
