<Window x:Class="Udemy_Calculator.OptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Udemy_Calculator"
        mc:Ignorable="d"
        Title="Calculator theme"
        ResizeMode="NoResize"
        WindowStyle="None"
        Style="{StaticResource MainWindowStyle}"
        WindowStartupLocation="Manual"
        SizeToContent="WidthAndHeight">


    <!--Main Grid-->
    <Grid Margin="10" Height="400">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <!--StackPanel for Theme name and selection Combobox-->
        <StackPanel Orientation="Horizontal"
                    Margin="10"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">
            <Label x:Name="ComboBoxThemeListLabel"
                   Content="Theme name"
                   FontSize="12" />
            <ComboBox x:Name="ComboBoxThemeList"
                      HorizontalAlignment="Stretch"
                      Width="250"
                      FontSize="15"
                      Height="22"
                      FontWeight="SemiBold"
                      VerticalContentAlignment="Center"
                      Padding="10 0 0 5"
                      HorizontalContentAlignment="Center"
                      SelectionChanged="ComboBoxThemeList_SelectionChanged" />
        </StackPanel>

        <!--Grid for ListBox of elements name and Combo to select colors-->
        <ListBox x:Name="ItemsListComboBox"
                 Grid.Column="0"
                 Grid.Row="1"
                 Height="150"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 SelectedItem="ItemsListComboBox_Selected" />
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    Grid.Column="1"
                    Grid.Row="1">
            <local:ColorPicker_Control x:Name="BackgroundColorPicker"
                                       Margin="0 5 0 5" />
            <local:ColorPicker_Control x:Name="ForegroundColorPicker"
                                       Margin="0 5 0 5" />
            <local:ColorPicker_Control x:Name="BorderBrushColorPicker"
                                       Margin="0 5 0 5" />
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="Button"
                       BasedOn="{StaticResource ResourceKey=MainThemeButtonStyle}" />
            </StackPanel.Resources>

            <Button Click="Button_Add"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <Image Source="/Images/Add_icon.png" />
                </StackPanel>
            </Button>
            <Button Click="Button_Save">
                <StackPanel>
                    <Image Source="/Images/Save_icon.png" />
                </StackPanel>
            </Button>
            <Button Click="Button_Cancel">
                <StackPanel>
                    <Image Source="/Images/Cancel_icon.png" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>

</Window>
