<UserControl x:Class="Udemy_Calculator.CheckBox.CheckBox_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Udemy_Calculator.CheckBox"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:Name="checkBoxControl">
    <StackPanel>
        <CheckBox x:Name="CheckBoxControl"
                  Uid="{Binding Path=CheckBoxContent, ElementName=checkBoxControl}"
                  Checked="CheckBoxControl_Checked"
                  Unchecked="CheckBoxControl_Unchecked">
            <Label Content="{Binding Path=CheckBoxContent, ElementName=checkBoxControl}"
                   FontSize="11"
                   Margin="-5,-3,0,0"
                   Style="{DynamicResource ResourceKey=MainLabelStyle}" />
        </CheckBox>
    </StackPanel>
</UserControl>
