<Application x:Class="Udemy_Calculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Udemy_Calculator"
             Startup="Application_Startup">
    <Application.Resources>
        <local:TestingBackgroundConverter x:Key="testingBGConverter" />
        <FontFamily x:Key="Digital">pack://application:,,,/Fonts/#digital-7</FontFamily>
        <XmlDataProvider Source="Params\Theme.xml"
                         XPath="/Themes/Theme[@name=../ThemeSelected/@name]"
                         x:Key="colorThemesXml" />
        <SolidColorBrush x:Key="mainCalculatorBackground"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=MainTheme/MainCalculatorBackground}" />
        <SolidColorBrush x:Key="mainCalculatorForeground"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=MainTheme/MainCalculatorForeground}" />
        <SolidColorBrush x:Key="mainCalculatorBorderBrush"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=MainTheme/MainCalculatorBorderBrush}" />

        <SolidColorBrush x:Key="backgroundBaseButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=BaseButtons/BackgroundBaseButtons}" />
        <SolidColorBrush x:Key="foregroundBaseButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=BaseButtons/ForegroundBaseButtons}" />
        <SolidColorBrush x:Key="borderBrushBaseButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=BaseButtons/BorderBrushBaseButtons}" />

        <SolidColorBrush x:Key="background2ndeButton"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=SndeButton/Background2ndeButton}" />
        <SolidColorBrush x:Key="foreground2ndeButton"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=SndeButton/Foreground2ndeButton}" />
        <SolidColorBrush x:Key="borderBrush2ndeButton"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=SndeButton/BorderBrush2ndeButton}" />

        <SolidColorBrush x:Key="backgroundScientificButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=ScientificButtons/BackgroundScientificButtons}" />
        <SolidColorBrush x:Key="foregroundScientificButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=ScientificButtons/ForegroundScientificButtons}" />
        <SolidColorBrush x:Key="borderBrushScientificButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=ScientificButtons/BorderBrushScientificButtons}" />

        <SolidColorBrush x:Key="backgroundOperatorsButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=OperatorsButtons/BackgroundOperatorsButtons}" />
        <SolidColorBrush x:Key="foregroundOperatorsButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=OperatorsButtons/ForegroundOperatorsButtons}" />
        <SolidColorBrush x:Key="borderBrushOperatorsButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=OperatorsButtons/BorderBrushOperatorsButtons}" />

        <SolidColorBrush x:Key="backgroundNumericalsButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=NumericalsButtons/BackgroundNumericalsButtons}" />
        <SolidColorBrush x:Key="foregroundNumericalsButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=NumericalsButtons/ForegroundNumericalsButtons}" />
        <SolidColorBrush x:Key="borderBrushNumericalsButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=NumericalsButtons/BorderBrushNumericalsButtons}" />

        <SolidColorBrush x:Key="backgroundMemoryButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=MemoryButtons/BackgroundMemoryButtons}" />
        <SolidColorBrush x:Key="foregroundMemoryButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=MemoryButtons/ForegroundMemoryButtons}" />
        <SolidColorBrush x:Key="borderBrushMemoryButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=MemoryButtons/BorderBrushMemoryButtons}" />

        <SolidColorBrush x:Key="backgroundTrigonometryButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=TrigonometryButtons/BackgroundTrigonometryButtons}" />
        <SolidColorBrush x:Key="foregroundTrigonometryButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=TrigonometryButtons/ForegroundTrigonometryButtons}" />
        <SolidColorBrush x:Key="borderBrushTrigonometryButtons"
                         Color="{Binding Source={StaticResource colorThemesXml}, XPath=TrigonometryButtons/BorderBrushTrigonometryButtons}" />

        <Style x:Key="MainWindowStyle">
            <Setter Property="Control.Background"
                    Value="{StaticResource mainCalculatorBackground}" />
            <Setter Property="Control.Foreground"
                    Value="{StaticResource mainCalculatorForeground}" />
            <Setter Property="Control.BorderBrush"
                    Value="{StaticResource mainCalculatorBorderBrush}" />
            <Setter Property="Control.BorderThickness"
                    Value="1.5" />
        </Style>

        <Style x:Key="MainLabelStyle"
               TargetType="Label">
            <Setter Property="Foreground"
                    Value="{StaticResource mainCalculatorForeground}" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="Margin"
                    Value="0 0 0 0" />
        </Style>

        <Style x:Key="BaseButtonsStyle"
               TargetType="Button">
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="FontWeight"
                    Value="ExtraBold" />
            <Setter Property="OverridesDefaultStyle"
                    Value="true" />
            <Setter Property="Padding"
                    Value="0 0 0 3" />
            <Setter Property="Foreground"
                    Value="{StaticResource foregroundBaseButtons}" />
            <Setter Property="Background"
                    Value="{StaticResource backgroundBaseButtons}" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource borderBrushBaseButtons}" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Width"
                    Value="63" />
            <Setter Property="Height"
                    Value="45" />
            <Setter Property="Margin"
                    Value="1" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter x:Name="contentPresenter"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              Content="{TemplateBinding Content}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsPressed"
                                               Value="False" />
                                    <Condition Property="IsMouseOver"
                                               Value="True" />
                                </MultiTrigger.Conditions>
                                <MultiTrigger.Setters>
                                    <Setter Property="Opacity"
                                            Value="0.5" />
                                </MultiTrigger.Setters>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsPressed"
                                               Value="True" />
                                    <Condition Property="IsMouseOver"
                                               Value="True" />
                                </MultiTrigger.Conditions>
                                <MultiTrigger.Setters>
                                    <Setter Property="Background"
                                            Value="Yellow" />
                                    <Setter Property="Foreground"
                                            Value="Black" />
                                    <Setter Property="BorderBrush"
                                            Value="White" />
                                    <Setter Property="BorderThickness"
                                            Value="1" />
                                </MultiTrigger.Setters>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OperatorsButtonsStyle"
               TargetType="Button"
               BasedOn="{StaticResource ResourceKey=BaseButtonsStyle}">
            <Setter Property="Background"
                    Value="{StaticResource backgroundOperatorsButtons}" />
            <Setter Property="Foreground"
                    Value="{StaticResource foregroundOperatorsButtons}" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource borderBrushOperatorsButtons}" />
            <Setter Property="Padding"
                    Value="0 -10 0 0" />
        </Style>

        <Style x:Key="NumericalsButtonsStyle"
               TargetType="Button"
               BasedOn="{StaticResource ResourceKey=BaseButtonsStyle}">
            <Setter Property="FontSize"
                    Value="35" />
            <Setter Property="FontFamily"
                    Value="{StaticResource Digital}" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Padding"
                    Value="0 0 0 0" />
            <Setter Property="Background"
                    Value="{StaticResource backgroundNumericalsButtons}" />
            <Setter Property="Foreground"
                    Value="{StaticResource foregroundNumericalsButtons}" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource borderBrushNumericalsButtons}" />
        </Style>

        <Style x:Key="MemoryButtonsStyle"
               TargetType="Button"
               BasedOn="{StaticResource ResourceKey=BaseButtonsStyle}">
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="FontWeight"
                    Value="DemiBold" />
            <Setter Property="Background"
                    Value="{StaticResource backgroundMemoryButtons}" />
            <Setter Property="Foreground"
                    Value="{StaticResource foregroundMemoryButtons}" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource borderBrushMemoryButtons}" />
            <Setter Property="Width"
                    Value="67" />
            <Setter Property="Height"
                    Value="25" />
            <Setter Property="Margin"
                    Value="2 0 0 15" />
        </Style>

        <Style x:Key="ScientificButtonsStyle"
               TargetType="Button"
               BasedOn="{StaticResource ResourceKey=BaseButtonsStyle}">
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="FontWeight"
                    Value="DemiBold" />
            <Setter Property="Background"
                    Value="{StaticResource backgroundScientificButtons}" />
            <Setter Property="Foreground"
                    Value="{StaticResource foregroundScientificButtons}" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource borderBrushScientificButtons}" />
            <Setter Property="Width"
                    Value="50.5" />
            <Setter Property="Height"
                    Value="20" />
            <Setter Property="Margin"
                    Value="2 0 0 2" />
            <Setter Property="Padding"
                    Value="0 -2 0 0" />
        </Style>

        <Style x:Key="TrigonometryButtonsStyle"
               TargetType="Button"
               BasedOn="{StaticResource ResourceKey=ScientificButtonsStyle}">
            <Setter Property="Background"
                    Value="{StaticResource backgroundTrigonometryButtons}" />
            <Setter Property="Foreground"
                    Value="{StaticResource foregroundTrigonometryButtons}" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource borderBrushTrigonometryButtons}" />
            <Setter Property="Padding"
                    Value="0,-3,0,0" />
        </Style>

        <Style x:Key="SndeButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource ResourceKey=ScientificButtonsStyle}">
            <Setter Property="Background"
                    Value="{StaticResource background2ndeButton}" />
            <Setter Property="Foreground"
                    Value="{StaticResource foreground2ndeButton}" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource borderBrush2ndeButton}" />
        </Style>
   
        <Style x:Key="ImageButtonStyle"
               BasedOn="{StaticResource ResourceKey=MainWindowStyle}"
               TargetType="Image">
            <Setter Property="Width"
                    Value="18" />
            <Setter Property="Height"
                    Value="18" />
        </Style>

        <Style x:Key="MenuStyle"
               TargetType="Menu"
               BasedOn="{StaticResource ResourceKey=MainWindowStyle}">
            <Setter Property="Background"
                    Value="{StaticResource mainCalculatorBackground}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource background2ndeButton}" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Application.Resources>
</Application>
