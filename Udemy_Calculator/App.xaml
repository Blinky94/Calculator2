<Application x:Class="Udemy_Calculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Udemy_Calculator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <FontFamily x:Key="Digital">pack://application:,,,/Fonts/#digital-7</FontFamily>
        <XmlDataProvider Source="Params\Theme.xml"
                         XPath="/Themes/Theme[@name=../ThemeSelected/@name]"
                         x:Key="colorThemes" />
        <SolidColorBrush x:Key="mainCalculatorBackground"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=MainTheme/MainCalculatorBackground}" />
        <SolidColorBrush x:Key="mainCalculatorForeground"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=MainTheme/MainCalculatorForeground}" />
        <SolidColorBrush x:Key="mainCalculatorBorderBrush"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=MainTheme/MainCalculatorBorderBrush}" />

        <SolidColorBrush x:Key="backgroundBaseButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=BaseButtons/BackgroundBaseButtons}" />
        <SolidColorBrush x:Key="foregroundBaseButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=BaseButtons/ForegroundBaseButtons}" />
        <SolidColorBrush x:Key="borderBrushBaseButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=BaseButtons/BorderBrushBaseButtons}" />

        <SolidColorBrush x:Key="background2ndeButton"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=SndeButton/Background2ndeButton}" />
        <SolidColorBrush x:Key="foreground2ndeButton"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=SndeButton/Foreground2ndeButton}" />
        <SolidColorBrush x:Key="borderBrush2ndeButton"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=SndeButton/BorderBrush2ndeButton}" />

        <SolidColorBrush x:Key="backgroundScientificButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=ScientificButtons/BackgroundScientificButtons}" />
        <SolidColorBrush x:Key="foregroundScientificButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=ScientificButtons/ForegroundScientificButtons}" />
        <SolidColorBrush x:Key="borderBrushScientificButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=ScientificButtons/BorderBrushScientificButtons}" />

        <SolidColorBrush x:Key="backgroundOperatorsButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=OperatorsButtons/BackgroundOperatorsButtons}" />
        <SolidColorBrush x:Key="foregroundOperatorsButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=OperatorsButtons/ForegroundOperatorsButtons}" />
        <SolidColorBrush x:Key="borderBrushOperatorsButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=OperatorsButtons/BorderBrushOperatorsButtons}" />

        <SolidColorBrush x:Key="backgroundNumericalsButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=NumericalsButtons/BackgroundNumericalsButtons}" />
        <SolidColorBrush x:Key="foregroundNumericalsButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=NumericalsButtons/ForegroundNumericalsButtons}" />
        <SolidColorBrush x:Key="borderBrushNumericalsButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=NumericalsButtons/BorderBrushNumericalsButtons}" />

        <SolidColorBrush x:Key="backgroundMemoryButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=MemoryButtons/BackgroundMemoryButtons}" />
        <SolidColorBrush x:Key="foregroundMemoryButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=MemoryButtons/ForegroundMemoryButtons}" />
        <SolidColorBrush x:Key="borderBrushMemoryButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=MemoryButtons/BorderBrushMemoryButtons}" />

        <SolidColorBrush x:Key="backgroundTrigonometryButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=Trigonometry/BackgroundTrigonometryButtons}" />
        <SolidColorBrush x:Key="foregroundTrigonometryButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=Trigonometry/ForegroundTrigonometryButtons}" />
        <SolidColorBrush x:Key="borderBrushTrigonometryButtons"
                         Color="{Binding Source={StaticResource colorThemes}, XPath=Trigonometry/BorderBrushTrigonometryButtons}" />
   

        <Style x:Key="MainWindowStyle">
            <Setter Property="Control.Background"
                    Value="{DynamicResource mainCalculatorBackground}" />
            <Setter Property="Control.Foreground"
                    Value="{DynamicResource mainCalculatorForeground}" />
            <Setter Property="Control.BorderBrush"
                    Value="{DynamicResource mainCalculatorBorderBrush}" />
            <Setter Property="Control.BorderThickness"
                    Value="1.5" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding"
                    Value="5" />
            <Setter Property="Width"
                    Value="35" />
            <Setter Property="Height"
                    Value="35" />
            <Setter Property="Margin"
                    Value="10 0 0 0" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="BorderThickness"
                    Value="10" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="Margin"
                    Value="0 0 0 0" />
        </Style>

        <Style x:Key="BaseButtons"
               TargetType="Button">
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="FontWeight"
                    Value="ExtraBold" />
            <Setter Property="OverridesDefaultStyle"
                    Value="true" />
            <Setter Property="Padding"
                    Value="0 0 0 3" />
            <Setter Property="Foreground"
                    Value="{DynamicResource foregroundBaseButtons}" />
            <Setter Property="Background"
                    Value="{DynamicResource backgroundBaseButtons}" />
            <Setter Property="BorderBrush"
                    Value="{DynamicResource borderBrushBaseButtons}" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Width"
                    Value="63" />
            <Setter Property="Height"
                    Value="45" />
            <Setter Property="Margin"
                    Value="1" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter x:Name="contentPresenter"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              Content="{TemplateBinding Content}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="White" />
                                <Setter Property="Foreground"
                                        Value="Black" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OperatorsButtons"
               TargetType="Button"
               BasedOn="{StaticResource ResourceKey=BaseButtons}">
            <Setter Property="Background"
                    Value="{DynamicResource backgroundOperatorsButtons}" />
            <Setter Property="Foreground"
                    Value="{DynamicResource foregroundOperatorsButtons}" />
            <Setter Property="BorderBrush"
                    Value="{DynamicResource borderBrushOperatorsButtons}" />
        </Style>

        <Style x:Key="NumericalsButtons"
               TargetType="Button"
               BasedOn="{StaticResource ResourceKey=BaseButtons}">
            <Setter Property="FontSize"
                    Value="35" />
            <Setter Property="FontFamily"
                    Value="{StaticResource Digital}" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Padding"
                    Value="0 -2 0 0" />
            <Setter Property="Background"
                    Value="{DynamicResource backgroundNumericalsButtons}" />
            <Setter Property="Foreground"
                    Value="{DynamicResource foregroundNumericalsButtons}" />
            <Setter Property="BorderBrush"
                    Value="{DynamicResource borderBrushNumericalsButtons}" />
        </Style>

        <Style x:Key="MemoryButtons"
               TargetType="Button"
               BasedOn="{StaticResource ResourceKey=BaseButtons}">
            <Setter Property="FontSize"
                    Value="12" />
            <Setter Property="FontWeight"
                    Value="DemiBold" />
            <Setter Property="Background"
                    Value="{DynamicResource backgroundMemoryButtons}" />
            <Setter Property="Foreground"
                    Value="{DynamicResource foregroundMemoryButtons}" />
            <Setter Property="BorderBrush"
                    Value="{DynamicResource borderBrushMemoryButtons}" />
            <Setter Property="Width"
                    Value="65" />
            <Setter Property="Height"
                    Value="25" />
            <Setter Property="Margin"
                    Value="2 0 0 10" />
        </Style>

        <Style x:Key="ScientificButtons"
               TargetType="Button"
               BasedOn="{StaticResource ResourceKey=BaseButtons}">
            <Setter Property="FontSize"
                    Value="12" />
            <Setter Property="FontWeight"
                    Value="DemiBold" />
            <Setter Property="Background"
                    Value="{DynamicResource backgroundScientificButtons}" />
            <Setter Property="Foreground"
                    Value="{DynamicResource foregroundScientificButtons}" />
            <Setter Property="BorderBrush"
                    Value="{DynamicResource borderBrushScientificButtons}" />
            <Setter Property="Width"
                    Value="50.5" />
            <Setter Property="Height"
                    Value="20" />
            <Setter Property="Margin"
                    Value="2 0 0 2" />
        </Style>

        <Style x:Key="TrigonometryButtons"
               TargetType="Button"
               BasedOn="{StaticResource ResourceKey=ScientificButtons}">
            <Setter Property="Background"
                    Value="{DynamicResource backgroundTrigonometryButtons}" />
            <Setter Property="Foreground"
                    Value="{DynamicResource boregroundTrigonometryButtons}" />
            <Setter Property="BorderBrush"
                    Value="{DynamicResource borderBrushTrigonometryButtons}" />
        </Style>

        <Style x:Key="SndeButton"
               TargetType="Button"
               BasedOn="{StaticResource ResourceKey=ScientificButtons}">
            <Setter Property="Background"
                    Value="{DynamicResource background2ndeButton}" />
            <Setter Property="Foreground"
                    Value="{DynamicResource foreground2ndeButton}" />
            <Setter Property="BorderBrush"
                    Value="{DynamicResource borderBrush2ndeButton}" />
        </Style>

        <Style x:Key="MainThemeButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource SndeButton}">
            <Setter Property="Width"
                    Value="auto" />
            <Setter Property="Height"
                    Value="25" />
            <Setter Property="Padding"
                    Value="10 0 10 0" />
            <Setter Property="Margin"
                    Value="5 0 5 0" />
        </Style>
        <Style TargetType="Image">
            <Setter Property="Width"
                    Value="17" />
            <Setter Property="Height"
                    Value="17" />
        </Style>

    </Application.Resources>
</Application>
