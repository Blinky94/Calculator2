<UserControl x:Class="Udemy_Calculator.CalculatorControls.MemoryButtonsPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Udemy_Calculator.CalculatorControls"
             xmlns:buttons="clr-namespace:Udemy_Calculator.Buttons"
             mc:Ignorable="d"
             d:DesignHeight="50"
             d:DesignWidth="220">
    <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <!--Memorisation Panel-->
        <WrapPanel>
            <buttons:MemoryButton_Control x:Name="UIMCButton"
                                          MemoryButtonContent="MC" />
            <buttons:MemoryButton_Control x:Name="UIMemoryPlusButton"
                                          MemoryButtonContent="M+" />
            <buttons:MemoryButton_Control x:Name="UIMemoryRecallButton"
                                          MemoryButtonContent="MR" />
        </WrapPanel>

    </StackPanel>
</UserControl>
