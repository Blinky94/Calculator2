<Window x:Class="Udemy_Calculator.ConsoleDebug"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Udemy_Calculator"
        mc:Ignorable="d"
        Title="ConsoleDebug"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="White"
        WindowStartupLocation="Manual"
        Height="950"
        Width="850">
    <Grid x:Name="UIGridConsoleDebug" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <RichTextBox Grid.Column="0"
                     Grid.ColumnSpan="4"
                     Grid.Row="0"
                     x:Name="UIRichTextBoxConsoleDebug"
                     Background="Black"
                     Margin="20 20 20 0"
                     Block.LineHeight="0.2"
                     HorizontalScrollBarVisibility="Disabled"
                     VerticalScrollBarVisibility="Auto" />

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Grid.Row="1">
            <WrapPanel Orientation="Vertical"
                       Name="GridCheckBoxes">
                <WrapPanel.Resources>
                    <Style TargetType="CheckBox">
                        <Setter Property="IsChecked"
                                Value="True" />
                        <Setter Property="Margin"
                                Value="5 2 0 2" />
                    </Style>
                </WrapPanel.Resources>
                <CheckBox x:Name="CheckBoxInfo"
                          Content="Info"
                          Checked="CheckBox_DisplayMessageFromChecked"
                          Unchecked="CheckBox_DisplayMessageFromChecked" />
                <CheckBox x:Name="CheckBoxWarning"
                          Content="Warning"
                          Checked="CheckBox_DisplayMessageFromChecked"
                          Unchecked="CheckBox_DisplayMessageFromChecked" />
                <CheckBox x:Name="CheckBoxError"
                          Content="Error"
                          Checked="CheckBox_DisplayMessageFromChecked"
                          Unchecked="CheckBox_DisplayMessageFromChecked" />
                <CheckBox x:Name="CheckBoxOutput"
                          Content="Output"
                          Checked="CheckBox_DisplayMessageFromChecked"
                          Unchecked="CheckBox_DisplayMessageFromChecked" />
                <CheckBox x:Name="CheckBoxTechnical"
                          Content="Technical"
                          Checked="CheckBox_DisplayMessageFromChecked"
                          Unchecked="CheckBox_DisplayMessageFromChecked" />
            </WrapPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="HorizontalAlignment"
                                Value="Center" />
                        <Setter Property="HorizontalContentAlignment"
                                Value="Center" />
                        <Setter Property="VerticalAlignment"
                                Value="Center" />
                        <Setter Property="VerticalContentAlignment"
                                Value="Center" />
                        <Setter Property="FontSize"
                                Value="20" />
                        <Setter Property="Width"
                                Value="100" />
                        <Setter Property="Height"
                                Value="auto" />
                        <Setter Property="Margin"
                                Value="10 0 0 0" />
                    </Style>
                </StackPanel.Resources>
                <Button Content="Clear"
                        Click="ClearConsole_Click" />
                <Button Content="Close"
                        Click="CloseConsole_Click" />
                <Button Content="Save..."
                        Click="Button_SaveClick" />
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
