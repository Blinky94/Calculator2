<UserControl x:Class="Udemy_Calculator.HistoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Udemy_Calculator"
             mc:Ignorable="d"
             d:DesignHeight="450"
             BorderBrush="Transparent"
             Style="{DynamicResource MainWindowStyle}"
             d:DesignWidth="260">

    <Grid x:Name="HistoryControlMainGrid"
          Margin="10 15 0 -20">
        <Grid.Resources>
            <local:TestingBackgroundConverter x:Key="testingBGConverter" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
        </Grid.ColumnDefinitions>

        <!--History Grid-->
        <Grid Name="HistoryGrid"
              Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="500" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="RichTextBox">
                    <Setter Property="FontSize"
                            Value="16" />
                    <Setter Property="FontWeight"
                            Value="Bold" />
                    <Setter Property="Padding"
                            Value="0" />
                </Style>
            </Grid.Resources>
            <ScrollViewer x:Name="UIHistoryScrollViewer"
                          Grid.Row="0"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Background="Transparent">

                <RichTextBox x:Name="UIHistoryTextBox"
                             IsReadOnly="True"
                             BorderBrush="LightGray"
                             BorderThickness="0 0 0 0"
                             ScrollViewer.CanContentScroll="True"
                             Padding="0"
                             TextChanged="UIHistoryTextBox_TextChanged">
                    <RichTextBox.Background>
                        <SolidColorBrush Color="Gray"
                                         Opacity="0.3" />
                    </RichTextBox.Background>
                    <FlowDocument x:Name="UIHistoryFlowDoc"
                                  LineHeight="1">
                    </FlowDocument>
                </RichTextBox>
            </ScrollViewer>
            <StackPanel Orientation="Horizontal"
                        Background="Transparent"
                        Grid.Row="1"
                        Margin="0"
                        HorizontalAlignment="Center"
                        DockPanel.Dock="Bottom">
                <Button x:Name="UICleaner"
                        Click="UICleaner_Click"
                        Style="{DynamicResource MainThemeButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image>
                            <Image.Style>
                                <Style TargetType="Image"
                                       BasedOn="{StaticResource ImageButtonStyle}">
                                    <Setter Property="Source"
                                            Value="Images/Cleaner_icon.png" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Background, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Converter={StaticResource testingBGConverter}}"
                                                     Value="true">
                                            <Setter Property="Source"
                                                    Value="Images/Cleaner_icon_reverse.png" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </StackPanel>
                </Button>
                <Button x:Name="UISave"
                        Click="UISave_Click"
                        Style="{DynamicResource MainThemeButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image>
                            <Image.Style>
                                <Style TargetType="Image"
                                       BasedOn="{StaticResource ImageButtonStyle}">
                                    <Setter Property="Source"
                                            Value="Images/Save_icon.png" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Background, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Converter={StaticResource testingBGConverter}}"
                                                     Value="true">
                                            <Setter Property="Source"
                                                    Value="Images/Save_icon_reverse.png" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
